<MagicButton@MagicBehavior+Button>
MDScreen:
    name: "reach"
    MDFloatLayout:
        MDIconButton:
            icon: "arrow-left"
            user_font_size: "35sp"
            pos_hint: {"center_x": 0.05,'center_y': .95}
            on_release: 
                root.manager.current = "main"
                root.manager.transition.direction = "right"
        MDIconButton:
            icon: "instagram"
            user_font_size: "35sp"
            pos_hint: {"center_x": 0.05,'center_y': .9}
            on_release: 
                root.manager.current = "main"
        
        MDLabel:
            text: 'Predict your Instagram Reach'
            font_size: "18sp"
            pos_hint: {'center_x': 0.6,'center_y': 0.9}
        MDTextField:
            id: Likes
            icon_left: 'key-variant'
            icon_right: 'location-enter'
            size_hint: 0.9,0.075
            icon_left_color: rgba(144, 117, 216)
            icon_right_color: rgba(144, 117, 216)
            font_size: 28
            line_color_focus: 0,0,0,0
            required: True
            foreground_color: 0,0,0,0
            pos_hint: {'center_x': 0.5,'center_y': 0.75}
            hint_text: 'Enter Likes'
            halign: "left"
        MDTextField:
            id: Saves
            icon_left: 'key-variant'
            icon_right: 'location-enter'
            size_hint: 0.9,0.075
            font_size: 28
            icon_left_color: rgba(144, 117, 216)
            icon_right_color: rgba(144, 117, 216)
            line_color_focus: 0,0,0,0
            required: True
            foreground_color: 0,0,0,0
            pos_hint: {'center_x': 0.5,'center_y': 0.65}
            hint_text: 'Enter Saves'
            halign: "left"
        MDTextField:
            id: Comments
            icon_left: 'key-variant'
            icon_right: 'location-enter'
            size_hint: 0.9,0.075
            font_size: 28
            icon_left_color: rgba(144, 117, 216)
            icon_right_color: rgba(144, 117, 216)
            line_color_focus: 0,0,0,0
            required: True
            foreground_color: 0,0,0,0
            pos_hint: {'center_x': 0.5,'center_y': 0.55}
            hint_text: 'Enter Comments'
            halign: "left"
        MDTextField:
            id: Shares
            icon_left: 'key-variant'
            icon_right: 'location-enter'
            size_hint: 0.9,0.075
            font_size: 28
            icon_left_color: rgba(144, 117, 216)
            icon_right_color: rgba(144, 117, 216)
            line_color_focus: 0,0,0,0
            required: True
            foreground_color: 0,0,0,0
            pos_hint: {'center_x': 0.5,'center_y': 0.45}
            hint_text: 'Enter Shares'
            halign: "left"
        MDTextField:
            id: Visits
            icon_left: 'key-variant'
            icon_right: 'location-enter'
            size_hint: 0.9,0.075
            font_size: 28
            icon_left_color: rgba(144, 117, 216)
            icon_right_color: rgba(144, 117, 216)
            line_color_focus: 0,0,0,0
            required: True
            foreground_color: 0,0,0,0
            pos_hint: {'center_x': 0.5,'center_y': 0.35}
            hint_text: 'Enter profile Visits'
            halign: "left"
        MDTextField:
            id: Followers
            icon_left: 'key-variant'
            icon_right: 'location-enter'
            size_hint: 0.9,0.1
            font_size: 28
            icon_left_color: rgba(144, 117, 216)
            icon_right_color: rgba(144, 117, 216)
            line_color_focus: 0,0,0,0
            required: True
            foreground_color: 0,0,0,0
            pos_hint: {'center_x': 0.5,'center_y': 0.25}
            hint_text: 'Enter Followers'
            halign: "left"
        MagicButton:
            id: happy
            text: "Predict"
            pos_hint: {'center_x': 0.5,'center_y': 0.05}
            halign: "center"
            size_hint: 0.3, 0.04
            on_press: app.predict_instagram_reach()
            background_color: 1,1,1,0
            canvas.before:
                Color:
                    rgb: 1,20/255,147/255,1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [30]
        MagicButton:
            id: happyhappy
            text: ""
            pos_hint: {'center_x': 0.5,'center_y': 0.15}
            halign: "center"
            size_hint: 0.8, 0.08
            background_color: 0, 0, 0, 0  # Set background color to fully transparent
            text_color: 0, 1, 0, 1  # Set text color to black
            canvas.before:
                Color:
                    rgb: 1,20/255,147/255,1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [30]