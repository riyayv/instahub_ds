#: import Window kivy.core.window.Window

DribbleUI:
<DribbleUI>:
    name: "main"
    MDBoxLayout:    
        orientation:'vertical'
        MDScreen:
            canvas.after:
                Color:
                    rgba:.2,.2,.2,.5-(root.animation_constant/100)
                Ellipse:
                    size:dp(180)*(1-(root.animation_constant/100)),dp(40)
                    pos:self.pos[0]+(Window.width/2)-(dp(180)*(1-(root.animation_constant/100)))/2,self.pos[1]
            RelativeLayout:
                Image:
                    source:'assets/hashtag.png'
                    size_hint:None,None
                    size:'200dp','200dp'
                    pos_hint:{'center_x':.5,'center_y':.5+((root.animation_constant*2)/(Window.height))}
        MDBoxLayout:
            orientation:'vertical'
            spacing:'12dp'
            padding:'12dp'
            MDLabel:
                text:'InstaHub'
                halign:'center'
                font_style:'H5'
                bold:True
            MDLabel:
                text:'Elevate Your Social Media Game!'
                halign:'center'
                font_style:'Subtitle1'
            MDFillRoundFlatButton:
                text:'Predict Tags'
                pos_hint:{'center_x':.5,'center_y':.5}
                size_hint_x:0.9
                md_bg_color:1,20/255,147/255,1
                on_release:
                    root.manager.current = "home"
                    root.manager.transition.direction = "left"
            MDFillRoundFlatButton:
                text:'Predict Engagement'
                pos_hint:{'center_x':.5,'center_y':.5}
                size_hint_x:0.9
                md_bg_color:1,20/255,147/255,1
                on_release:
                    root.manager.current = "reach"
                    root.manager.transition.direction = "left"
            MDBoxLayout
